                <div class="panel">
                    <div class="panel-body">
                        <div class="row">
                            <form asp-controller="api/CostSharingReports" asp-action="UploadFile" class="dropzone"></form>
                        </div>
                        @if(ViewData["file"] != null){
                        <div class="row">
                            <a class="" href=@ViewData["file"] >Download File</a>
                        </div>
                        }
                    </div>
                </div>
            </div>
        <hr />
        <div class="row">
            <div class="col-lg-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="page-title">Cost Sharing Report List</h3>
                    </div>
                    <div class="panel-body table-responsive-lg">
