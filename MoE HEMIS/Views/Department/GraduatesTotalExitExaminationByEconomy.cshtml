    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Graduates Total Examination By Economy</h4>
            </div>
            <div class="modal-body">
                <form id="edit-form">
                    <div class="row">
                        <div class="col-lg-6">
                            <input type="number" hidden name="departmentId" value=@Model.Department.DepartmentId>
                            <input type="number" hidden name="graduatesTotalExitExaminationByEconomyId">
                            <div class="form-group">
                                <label class="control-label">Age Range</label>

                                <select name="ageRange" class="form-control">

                                    <option value="0">&lt; 18</option>
                                    <option value="1"> 18</option>
                                    <option value="2">19</option>
                                    <option value="3">20</option>
                                    <option value="4">21</option>
                                    <option value="5">22</option>
                                    <option value="6">23</option>
                                    <option value="7">24</option>
                                    <option value="8">25</option>
                                    <option value="9">26</option>
                                    <option value="10">&gt; 26</option>
                                </select>
                            </div>
                            <partial name="~/Views/Shared/Input/_StudyProgram.cshtml" />
                            <div class="form-group">
                                <label class="control-label">Geographical Location</label>
                                <select name="geographicalLocation" class="form-control">
                                    <option value="0">URBAN</option>
                                    <option value="1">RURAL</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label class="control-label">Male</label>
                                <input type="number" class="form-control" name="males" placeholder="Male" value="0">
                            </div>
                            <div class="form-group">
                                <label class="control-label">Female</label>
                                <input type="number" class="form-control" name="females" placeholder="Female"
                                       value="0">
                            </div>
                            <div class="form-group">
                                <label class="control-label">Quintile</label>
                                <select name="quintal" class="form-control">
                                    <option value="0">Lowest</option>
                                    <option value="1">Second</option>
                                    <option value="2">Third</option>
                                    <option value="3">Fourth</option>
                                    <option value="4">Highest Fifth</option>

                                </select>
                            </div>

                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Update </button>
                </form>
            </div>

        </div>

    </div>
</div>

