@Model  DepartmentViewModel
<partial name="SideNavView" />
<!-- MAIN -->
<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">


        <!-- row -->
        <div class="row" id="addGraduate">
            <div class="col-md-9">
                <h3 class="page-title">Add Special Need Graduate</h3>
                <!-- CONTACT FORM -->
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Special Need Graduate</h3>
                    </div>
                    <div class="panel-body">
                        <form id="new-form">
                            <div class="row">
                                <div class="col-lg-6">


                                    <input type="number" hidden name="collegeId" value=@Model.Department.CollegeId>
                                    <input type="number" hidden name="departmentId" value=@Model.Department.DepartmentId>

                                    <partial name="~/Views/Shared/Input/_StudyProgram.cshtml" />
                                    <partial name="~/Views/Shared/Input/_StudyLevel.cshtml" />

                                </div>
                                <div class="col-lg-6">

                                    <partial name="~/Views/Shared/Input/_Male.cshtml" />
                                    <partial name="~/Views/Shared/Input/_Female.cshtml" />

                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary">Add </button>
                        </form>
                    </div>
                </div>
                <!-- END CONTACT FORM -->

            </div>
            <!--/ col-lg-6 -->
        </div>

        <!-- / row -->

        <hr>
        <!-- row -->
        <div class="row">
            <div class="col-lg-11">

                <h3 class="col-cyan">Special Need Graduate List</h3>
                <div class="panel">
                    <div class="panel-heading">

                    </div>
                    <div class="panel-body">
                        <table class="table table-sorting table-hover table-striped" id="graduate-table">
                            <thead>
                                <tr>
                                    <th>Progrm</th>
                                    <th>Level</th>

                                    <th>Male</th>
                                    <th>Female</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- / row -->
    </div>
    <!-- END MAIN CONTENT -->
</div>
<!-- END MAIN -->
<!-- EDIT MODAL -->
<div id="edit-model-modal" class="modal" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Special Need Graduate</h4>
            </div>
            <div class="modal-body">
                <form id="edit-form">
                    <div class="row">
                        <div class="col-lg-6">


                            <input type="number" hidden name="collegeId" value=@Model.Department.CollegeId>
                            <input type="number" hidden name="departmentId" value=@Model.Department.DepartmentId>

                            <input type="number" hidden name="specialNeedGraduateId">

                            <partial name="~/Views/Shared/Input/_StudyProgram.cshtml" />
                            <partial name="~/Views/Shared/Input/_StudyLevel.cshtml" />

                        </div>
                        <div class="col-lg-6">

                            <partial name="~/Views/Shared/Input/_Male.cshtml" />
                            <partial name="~/Views/Shared/Input/_Female.cshtml" />

                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Update </button>
                </form>
            </div>

        </div>

    </div>
</div>

